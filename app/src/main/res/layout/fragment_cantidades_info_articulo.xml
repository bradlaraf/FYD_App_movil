        app:layout_constraintTop_toBottomOf="@+id/clArticuloInfoAlmacen">

        <TextView
            android:id="@+id/txvArticuloInfoStockTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock"
            android:textColor="@color/color_blue_sap_mobile"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
