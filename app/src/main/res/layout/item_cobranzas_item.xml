<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/default_container_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txvPagoCabeceraNombre"
        style="@style/default_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/txvPagoCabeceraFecha"
        app:layout_constraintStart_toEndOf="@+id/imvPagoCabeceraMigrado"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nombre Socio de negocio" />

    <TextView
        android:id="@+id/txvPagoCabeceraMonto"
        style="@style/default_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView3443237"
        app:layout_constraintTop_toBottomOf="@+id/txvPagoCabeceraFecha"
        tools:text="Monto del pago" />

    <ImageView
        android:id="@+id/imageView3443237"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/icon_arroy_enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/txvPagoCabeceraFecha"
        style="@style/default_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView3443237"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cantidad" />

    <TextView
        android:id="@+id/txvPagoCabeceraTipoPago"
        style="@style/default_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/imvPagoCabeceraMigrado"
        app:layout_constraintTop_toBottomOf="@+id/txvPagoCabeceraNombre"
        tools:text="Tipo de pago" />

    <ImageView
        android:id="@+id/imvPagoCabeceraMigrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/icon_cloud_await" />

    <TextView
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/txvCobranzaCancelado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelado"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/color_red"
        android:elevation="-1dp"
        android:alpha="0.3"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>