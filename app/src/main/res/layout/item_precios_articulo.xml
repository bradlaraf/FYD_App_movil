<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/clPedidoInfo"
    android:layout_marginTop="2dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/txvArticuloInfoListaPrecioValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="lista de precio"
        android:textColor="@color/color_blue_sap_mobile"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvArticuloInfoPrecioValue"
        style="edtNewSn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvArticuloInfoListaPrecioValue"
        tools:text="precio" />




</androidx.constraintlayout.widget.ConstraintLayout>