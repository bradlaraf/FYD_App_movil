<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clSocio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@color/color_white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imvSocio"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/icon_info_sn" />

    <TextView
        android:id="@+id/txvCardName"
        style="@style/default_title_large_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/imvSocio"
        app:layout_constraintStart_toEndOf="@+id/imvSocioVerifySap"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CardName" />

    <TextView
        android:id="@+id/txvNumeroDocumento"
        style="@style/default_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/imvSocio"
        app:layout_constraintStart_toEndOf="@+id/imvSocioVerifySap"
        app:layout_constraintTop_toBottomOf="@+id/txvCardName"
        tools:text="CardCode" />

    <ImageView
        android:id="@+id/imvSocioVerifySap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/icon_cloud_done" />
</androidx.constraintlayout.widget.ConstraintLayout>