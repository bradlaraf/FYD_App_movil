<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MassiveApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/color_blue_sap_mobile</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Base.Theme.ThemeWithNoActionBar" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_blue_sap_mobile</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="materialButtonStyle">@style/default_btn_custom</item>
    </style>

    <style name="Base.Theme.ThemeWithActionBar" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_blue_sap_mobile</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="materialButtonStyle">@style/default_btn_custom</item>
    </style>

    <style name="Base.Theme.Test" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="Theme.MassiveApp" parent="Base.Theme.MassiveApp" />

    <style name="Theme.AppCompat.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color_massive_deep_blue_v2</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_massive</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.MassiveApp</item>
    </style>

    <style name="btn_default_style" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/black</item>
        <item name="android:paddingHorizontal">50dp</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:textAppearance">@style/default_button_text</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>